<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LRAD013P.Views.PageAlumn">
    <ContentPage.Content>
        <StackLayout>

            <Image x:Name="foto" BackgroundColor="Azure" WidthRequest="100" HeightRequest="370" />

            <Button x:Name="btnfoto" Text="Tomar Foto" Clicked="btnfoto_Clicked" />

            <Entry x:Name="txtcodigo" Placeholder="Ingrese codigo" Keyboard="Text" />

            <Entry x:Name="txtnombres" Placeholder="Ingrese nombre" Keyboard="Text" />

            <Entry x:Name="txtapellidos" Placeholder="Ingrese apellidos" Keyboard="Text" />

            <Entry x:Name="txttelefono" Placeholder="Ingrese celular" Keyboard="Telephone" />

            <Entry x:Name="txtdireccion" Placeholder="Ingrese Direccion" Keyboard="Text" />

            <Button x:Name="btnagregar" Text="Salvar" Clicked="btnagregar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>